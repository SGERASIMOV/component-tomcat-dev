<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Context
<% @context_attrs.each do |key, value| -%>
<%= key %>="<%= value %>"
<% end -%>
>

<% @context_nodes.each do |n| -%>
  <% n.each do |name, args| -%>
  <<%= name %>
    <% args.each do |key, value| -%>
      <%= key %>="<%= value %>"
    <% end -%>
  />
  <% end -%>
<% end -%>
</Context>
